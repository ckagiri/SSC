{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": ["prettier"],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["import", "json"],
  "rules": {
    "linebreak-style": "off",
    "no-param-reassign": "off",
    "no-shadow": "off",
    "no-underscore-dangle": "off",
    "no-unused-expressions": "off",
    "class-methods-use-this": "off"
  }
}
